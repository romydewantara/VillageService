<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.HomeAdminFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Halo, anda masuk sebagai ADMIN"
        android:layout_centerInParent="true"/>

    <TextView
        android:id="@+id/tvSignOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Keluar"
        android:textStyle="bold"
        android:textColor="@color/light_blue"
        android:layout_below="@id/content"
        android:layout_centerInParent="true"/>

    <TextView
        android:id="@+id/tvPrintFile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Print PDF"
        android:textStyle="bold"
        android:textColor="@color/blue"
        android:layout_below="@id/tvSignOut"
        android:layout_centerInParent="true"/>

    <TextView
        android:id="@+id/tvPreviewPdf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Preview PDF"
        android:textStyle="bold"
        android:textColor="@color/blue"
        android:layout_below="@id/tvPrintFile"
        android:layout_centerInParent="true"/>

</RelativeLayout>