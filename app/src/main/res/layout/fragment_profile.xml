<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_waterpaint"
    tools:context=".fragment.ProfileFragment">

    <ImageView
        android:id="@+id/backButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:src="@mipmap/ic_back_blue"
        android:visibility="visible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutPageSpace"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="visible"
        app:layout_constraintHeight_percent="0.20"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutPhotoSpace"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="visible"
        app:layout_constraintHeight_percent="0.10"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cvPhotoProfile"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clickable="false"
        android:visibility="invisible"
        app:cardCornerRadius="25dp"
        app:cardMaxElevation="25dp"
        app:cardPreventCornerOverlap="false"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintHeight_percent=".2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutPhotoSpace">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageProfile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_man_profile" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/MulishWhiteBoldStyleTyke"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="REPUBLIK INDONESIA"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/backgroundProfile"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/bg_profile_rounded_top"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutPageSpace" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintIdentity"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="5dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@id/backgroundProfile"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cvPhotoProfile">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvKepalaKeluarga"
            style="@style/MulishBoldBlackStyle3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Mark Zuckerberg"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvNomorKK"
            style="@style/MulishBlackMediumStyle1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="123456789098765"
            app:layout_constraintTop_toBottomOf="@id/tvKepalaKeluarga" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutLogo"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/tvNomorKK">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:padding="15dp"
                android:scaleType="fitCenter"
                android:src="@drawable/garuda_logo"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintWidth_percent=".25" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvTerbitTanggal"
                style="@style/MulishRegularBlackStyleTiny"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="Dikeluarkan Tanggal:"
                app:layout_constraintBottom_toTopOf="@id/tvTanggal"
                app:layout_constraintLeft_toRightOf="@id/logo"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent=".75" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvTanggal"
                style="@style/MulishBoldBlackStyle1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:text="02-03-2021"
                app:layout_constraintLeft_toRightOf="@id/logo"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvTerbitTanggal"
                app:layout_constraintWidth_percent=".75" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvInfo"
                style="@style/MulishRegularGreyStyleTiny"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:text="@string/profile_info"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/logo"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvTanggal"
                app:layout_constraintWidth_percent=".75" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/midLine"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/light_blue_50"
            app:layout_constraintTop_toBottomOf="@+id/layoutLogo" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvDataKeluarga"
            style="@style/MulishBlueBoldStyle4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Data Keluarga"
            app:layout_constraintTop_toBottomOf="@id/midLine" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerMember"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvDataKeluarga" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <RelativeLayout
        android:id="@+id/overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_50"
        android:visibility="invisible" />

</androidx.constraintlayout.widget.ConstraintLayout>