<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <TextView
            android:id="@+id/titleAlert"
            style="@style/MulishBoldBlackStyle3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="25dp"
            android:paddingBottom="10dp"
            android:text="Title"
            android:visibility="visible" />

        <LinearLayout
            android:id="@+id/linearContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/titleAlert"
            android:orientation="vertical"
            android:padding="5dp">

            <EditText
                android:id="@+id/et1"
                style="@style/MulishBlackMediumStyle1"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/bg_edit_text_white_rounded"
                android:hint="No. KTP"
                android:inputType="number"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvError1"
                style="@style/MulishRegularRedStyleTiny"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="Nomor Induk telah terdaftarâ€¦*"
                android:visibility="gone" />

            <EditText
                android:id="@+id/et2"
                style="@style/MulishBlackMediumStyle1"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/bg_edit_text_white_rounded"
                android:hint="Nama Lengkap"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" />

            <RelativeLayout
                android:id="@+id/relativeGender"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/bg_edit_text_white_rounded"
                android:padding="5dp"
                app:layout_constraintTop_toBottomOf="@id/tvJenisKelamin">

                <Spinner
                    android:id="@+id/spinnerGender"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:entries="@array/genderItems"
                    android:popupBackground="@drawable/bg_edit_text_white_rounded"
                    android:theme="@style/SpinnerTheme" />
            </RelativeLayout>

            <EditText
                android:id="@+id/et3"
                style="@style/MulishBlackMediumStyle1"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/bg_edit_text_white_rounded"
                android:hint="Tempat Lahir"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvTanggalLahir"
                style="@style/MulishBoldBlackStyle1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Tanggal Lahir"
                app:layout_constraintTop_toBottomOf="@id/etTempatLahir" />

            <LinearLayout
                android:id="@+id/relativeTanggalLahir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et4"
                    style="@style/MulishBlackMediumStyle1"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="35"
                    android:background="@drawable/bg_edit_text_white_rounded"
                    android:hint="Tgl"
                    android:inputType="number"
                    android:maxLines="1"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="" />

                <RelativeLayout
                    android:id="@+id/relativeBulan"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="25"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/bg_edit_text_white_rounded">

                    <Spinner
                        android:id="@+id/spinnerMonth"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:entries="@array/monthItems"
                        android:popupBackground="@drawable/bg_edit_text_white_rounded"
                        android:theme="@style/SpinnerTheme" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relativeTahun"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="25"
                    android:background="@drawable/bg_edit_text_white_rounded">

                    <Spinner
                        android:id="@+id/spinnerYear"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:entries="@array/yearItems"
                        android:popupBackground="@drawable/bg_edit_text_white_rounded"
                        android:theme="@style/SpinnerTheme" />
                </RelativeLayout>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/relativeAgama"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/bg_edit_text_white_rounded"
                android:padding="5dp"
                app:layout_constraintTop_toBottomOf="@id/relativeTanggalLahir">

                <Spinner
                    android:id="@+id/spinnerAgama"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:entries="@array/agamaItems"
                    android:popupBackground="@drawable/bg_edit_text_white_rounded"
                    android:theme="@style/SpinnerTheme" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativePd"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/bg_edit_text_white_rounded"
                android:padding="5dp"
                app:layout_constraintTop_toBottomOf="@id/relativeAgama">

                <Spinner
                    android:id="@+id/spinnerPd"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:entries="@array/pendidikanItems"
                    android:popupBackground="@drawable/bg_edit_text_white_rounded"
                    android:theme="@style/SpinnerTheme" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeKerja"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/bg_edit_text_white_rounded"
                android:padding="5dp"
                app:layout_constraintTop_toBottomOf="@id/tvJenisKelamin">

                <Spinner
                    android:id="@+id/spinnerKerja"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:entries="@array/kerjaItems"
                    android:popupBackground="@drawable/bg_edit_text_white_rounded"
                    android:theme="@style/SpinnerTheme" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeStatusMarital"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/bg_edit_text_white_rounded"
                android:padding="5dp"
                app:layout_constraintTop_toBottomOf="@id/tvJenisKelamin">

                <Spinner
                    android:id="@+id/spinnerStatusMarital"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:entries="@array/kawinItems"
                    android:popupBackground="@drawable/bg_edit_text_white_rounded"
                    android:theme="@style/SpinnerTheme" />
            </RelativeLayout>

            <EditText
                android:id="@+id/et11"
                style="@style/MulishBlackMediumStyle1"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/bg_edit_text_white_rounded"
                android:hint="Status Hubungan Dalam Keluarga"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:visibility="gone" />

            <RelativeLayout
                android:id="@+id/relativeKewarganegaraan"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/bg_edit_text_white_rounded"
                android:padding="5dp"
                app:layout_constraintTop_toBottomOf="@id/tvJenisKelamin">

                <Spinner
                    android:id="@+id/spinnerKewarganegaraan"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:entries="@array/kewarganegaraanItems"
                    android:popupBackground="@drawable/bg_edit_text_white_rounded"
                    android:theme="@style/SpinnerTheme" />
            </RelativeLayout>

            <EditText
                android:id="@+id/et13"
                style="@style/MulishBlackMediumStyle1"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/bg_edit_text_white_rounded"
                android:hint="Nama Ayah"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:visibility="gone" />

            <EditText
                android:id="@+id/et14"
                style="@style/MulishBlackMediumStyle1"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/bg_edit_text_white_rounded"
                android:hint="Nama Ibu"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linearContainer"
            android:orientation="horizontal"
            android:visibility="visible"
            android:weightSum="100"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <TextView
                android:id="@+id/negativeButton"
                style="@style/MulishBoldBlackStyle1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:background="@drawable/bg_cad_negative_button"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:text="Batal"
                android:visibility="visible" />

            <TextView
                android:id="@+id/positiveButton"
                style="@style/MulishWhiteBoldStyle2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:background="@drawable/bg_cad_positive_button"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:text="Simpan"
                android:visibility="visible" />
        </LinearLayout>

    </RelativeLayout>

</FrameLayout>