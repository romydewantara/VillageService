<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <TextView
            android:id="@+id/titleAlert"
            style="@style/TextBlackMediumRalewayStyle3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="25dp"
            android:paddingBottom="10dp"
            android:text="Title"
            android:visibility="visible" />

        <LinearLayout
            android:id="@+id/linearContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/titleAlert"
            android:orientation="vertical"
            android:padding="5dp">

            <EditText
                android:id="@+id/et1"
                style="@style/TextBlackRegularRalewayStyle2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/background_edit_text_rounded"
                android:hint="No. KTP"
                android:inputType="number"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" />

            <EditText
                android:id="@+id/et2"
                style="@style/TextBlackRegularRalewayStyle2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/background_edit_text_rounded"
                android:layout_marginTop="5dp"
                android:hint="Nama Lengkap"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" />

            <EditText
                android:id="@+id/et3"
                style="@style/TextBlackRegularRalewayStyle2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/background_edit_text_rounded"
                android:layout_marginTop="5dp"
                android:hint="Jenis Kelamin"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" />

            <EditText
                android:id="@+id/et4"
                style="@style/TextBlackRegularRalewayStyle2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/background_edit_text_rounded"
                android:layout_marginTop="5dp"
                android:hint="Tempat Lahir"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvTanggalLahir"
                style="@style/TextBlackRegularRalewayStyle1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Tanggal Lahir"
                app:layout_constraintTop_toBottomOf="@id/etTempatLahir" />

            <LinearLayout
                android:id="@+id/relativeTanggalLahir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et5"
                    style="@style/TextBlackRegularRalewayStyle1"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="40"
                    android:background="@drawable/background_edit_text_rounded"
                    android:inputType="number"
                    android:maxLines="1"
                    android:hint="Tgl"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp" />

                <RelativeLayout
                    android:id="@+id/relativeTanggal"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="30"
                    android:background="@drawable/background_edit_text_rounded">

                    <Spinner
                        android:id="@+id/monthChooser"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:entries="@array/monthItems"
                        android:popupBackground="@drawable/background_edit_text_rounded" />
                </RelativeLayout>

                <EditText
                    android:id="@+id/et6"
                    style="@style/TextBlackRegularRalewayStyle1"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="30"
                    android:hint="Tahun"
                    android:background="@drawable/background_edit_text_rounded"
                    android:inputType="number"
                    android:maxLines="1"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp" />

            </LinearLayout>

            <EditText
                android:id="@+id/et7"
                style="@style/TextBlackRegularRalewayStyle2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/background_edit_text_rounded"
                android:layout_marginTop="5dp"
                android:hint="Agama"
                android:inputType="textEmailAddress"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" />

            <EditText
                android:id="@+id/et8"
                style="@style/TextBlackRegularRalewayStyle2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/background_edit_text_rounded"
                android:layout_marginTop="5dp"
                android:hint="Pendidikan"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" />

            <EditText
                android:id="@+id/et9"
                style="@style/TextBlackRegularRalewayStyle2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/background_edit_text_rounded"
                android:layout_marginTop="5dp"
                android:hint="Pekerjaan"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" />

            <EditText
                android:id="@+id/et10"
                style="@style/TextBlackRegularRalewayStyle2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/background_edit_text_rounded"
                android:layout_marginTop="5dp"
                android:hint="Status Pernikahan"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" />

            <EditText
                android:id="@+id/et11"
                style="@style/TextBlackRegularRalewayStyle2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/background_edit_text_rounded"
                android:layout_marginTop="5dp"
                android:hint="Status Hubungan Dalam Keluarga"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" />

            <EditText
                android:id="@+id/et12"
                style="@style/TextBlackRegularRalewayStyle2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/background_edit_text_rounded"
                android:layout_marginTop="5dp"
                android:hint="Kewarganegaraan"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" />

            <EditText
                android:id="@+id/et13"
                style="@style/TextBlackRegularRalewayStyle2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/background_edit_text_rounded"
                android:layout_marginTop="5dp"
                android:hint="Nama Ayah"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" />

            <EditText
                android:id="@+id/et14"
                style="@style/TextBlackRegularRalewayStyle2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/background_edit_text_rounded"
                android:layout_marginTop="5dp"
                android:hint="Nama Ibu"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linearContainer"
            android:orientation="horizontal"
            android:visibility="visible"
            android:weightSum="100"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <TextView
                android:id="@+id/negativeButton"
                style="@style/TextGreyBoldRalewayStyle1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:background="@drawable/bg_cad_negative_button"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:text="Batal"
                android:visibility="visible" />

            <TextView
                android:id="@+id/positiveButton"
                style="@style/TextBlueBoldRalewayStyle1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:background="@drawable/bg_cad_positive_button"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:text="Simpan"
                android:visibility="visible" />
        </LinearLayout>

    </RelativeLayout>

</FrameLayout>