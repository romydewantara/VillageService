<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintContainer1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <View
            android:id="@+id/viewTransparent1"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@android:color/transparent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/LinearMenu1"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/viewTransparent1">

            <androidx.cardview.widget.CardView
                android:id="@+id/cvMenu1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardBackgroundColor="#f1c232"
                app:cardCornerRadius="10dp"
                app:cardMaxElevation="10dp"
                app:cardPreventCornerOverlap="false"
                app:layout_constraintDimensionRatio="1:1">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvMenu1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:gravity="center"
                    android:text="@string/menu_citizen_one"
                    android:textColor="@color/dark_blue"
                    android:layout_margin="8dp"
                    app:layout_constraintBottom_toBottomOf="parent" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/relativeImageContainer1"
            android:layout_width="160dp"
            android:layout_height="160dp"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/cvRounded1"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_centerInParent="true"
                app:cardBackgroundColor="@color/light_blue"
                app:cardCornerRadius="65dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvImageContainer1"
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:layout_gravity="center"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="62.5dp">

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/imageResource1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:scaleType="fitCenter"
                        android:src="@mipmap/ic_profile_photo"
                        app:lottie_autoPlay="true"
                        app:lottie_fileName="lottie/lottie_perm_villager.json"
                        app:lottie_loop="true"/>

                </androidx.cardview.widget.CardView>

            </androidx.cardview.widget.CardView>

        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintContainer2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <View
            android:id="@+id/viewTransparent2"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@android:color/transparent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/LinearMenu2"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/viewTransparent2">

            <androidx.cardview.widget.CardView
                android:id="@+id/cvMenu2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardBackgroundColor="#f1c232"
                app:cardCornerRadius="10dp"
                app:cardMaxElevation="10dp"
                app:cardPreventCornerOverlap="false"
                app:layout_constraintDimensionRatio="1:1">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvMenu2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:gravity="center"
                    android:text="@string/menu_citizen_two"
                    android:textColor="@color/dark_blue"
                    android:layout_margin="8dp"
                    app:layout_constraintBottom_toBottomOf="parent" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/relativeImageContainer2"
            android:layout_width="160dp"
            android:layout_height="160dp"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/cvRounded2"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_centerInParent="true"
                app:cardBackgroundColor="@color/light_blue"
                app:cardCornerRadius="65dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvImageContainer2"
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:layout_gravity="center"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="62.5dp">

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/imageResource2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/ic_profile_photo"
                        app:lottie_autoPlay="true"
                        app:lottie_fileName="lottie/lottie_temp_villager.json"
                        app:lottie_loop="true"/>

                </androidx.cardview.widget.CardView>

            </androidx.cardview.widget.CardView>

        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>