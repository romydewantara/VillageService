<?xml version="1.0" encoding="utf-8"?>
<com.example.villageservice.library.ZoomableRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_pdf"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/paperContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="15dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingRight="15dp"
        android:background="@color/white">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/letterHead"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvLampiran"
                style="@style/NotoSansBlackRegularStyle1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="LAMPIRAN XII: MODEL AA.04"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvPdfHeader"
                style="@style/NotoSansBlackBoldStyle1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:text="RT. 007/RW. 014\nKELURAHAN PENGGILINGAN\nKECAMATAN CAKUNG\nJAKARTA TIMUR"
                android:textAllCaps="true"
                app:layout_constraintTop_toBottomOf="@id/tvLampiran" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="@color/black"
            app:layout_constraintTop_toBottomOf="@id/letterHead" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/line">

            <TextView
                android:id="@+id/tvPdfTitle"
                style="@style/NotoSansBlackBoldStyle1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="SURAT PENGANTAR"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/viewLine"
                android:layout_width="0dp"
                android:layout_height="0.5dp"
                android:background="@color/black"
                app:layout_constraintLeft_toLeftOf="@id/tvPdfTitle"
                app:layout_constraintRight_toRightOf="@id/tvPdfTitle"
                app:layout_constraintTop_toBottomOf="@id/tvPdfTitle" />

            <TextView
                android:id="@+id/tvNumber"
                style="@style/NotoSansBlackRegularStyle1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Nomor: \t\t\t/JT/VI/3/00\t\t/014/\t\t/20"
                app:layout_constraintTop_toBottomOf="@id/viewLine" />

            <TextView
                android:id="@+id/tvStatement"
                style="@style/NotoSansBlackRegularStyle1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="\t\t\tYang bertanda tangan dibawah ini, kami pengurus RT. 007/RW. 014, Kelurahan Penggilingan, Kecamatan Cakung dengan ini menerangkan bahwa:"
                app:layout_constraintTop_toBottomOf="@id/tvNumber" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintForm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/tvStatement">

                <include layout="@layout/layout_form" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:id="@+id/linearFooter"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="30dp"
                android:orientation="horizontal"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/constraintForm">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLeft"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    tools:ignore="RtlSymmetry">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvNumberFooterL"
                        style="@style/NotoSansBlackRegularStyle1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Nomor"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintWidth_percent="0.3" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvNumberFooterR"
                        style="@style/NotoSansBlackRegularStyle1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:gravity="center_vertical"
                        android:text="\t/JT/VI/3/00\t/014/\t/20"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="@id/tvNumberFooterL"
                        app:layout_constraintWidth_percent="0.7" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvTanggalFooterL"
                        style="@style/NotoSansBlackRegularStyle1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Tanggal"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvNumberFooterR"
                        app:layout_constraintWidth_percent="0.3" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvTanggalFooterR"
                        style="@style/NotoSansBlackRegularStyle1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="20.12.21"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvNumberFooterR"
                        app:layout_constraintWidth_percent="0.7" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvRW"
                        style="@style/NotoSansBlackRegularStyle1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:gravity="center"
                        android:text="Mengetahui,\nPengurus RW. 014/3\nKetua,"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvTanggalFooterL" />

                    <RelativeLayout
                        android:id="@+id/imageStampRW"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:visibility="invisible"
                        app:layout_constraintTop_toBottomOf="@id/tvRW">

                        <include layout="@layout/layout_stamp" />
                    </RelativeLayout>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvRWName"
                        style="@style/NotoSansBlackRegularStyle1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Bpk. Ketua RW"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/imageStampRW" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintRight"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    tools:ignore="RtlSymmetry">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvTanggalRT"
                        style="@style/NotoSansBlackRegularStyle1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Jakarta, 20 Desember 2021"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvSpaceEmpty"
                        style="@style/NotoSansBlackRegularStyle1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="20.12.21"
                        android:visibility="invisible"
                        app:layout_constraintTop_toBottomOf="@id/tvTanggalRT" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvRT"
                        style="@style/NotoSansBlackRegularStyle1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:gravity="center"
                        android:text="Pengurus RT. 007 RW. 014\nKetua,"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvSpaceEmpty" />

                    <RelativeLayout
                        android:id="@+id/relativeStamp"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:padding="5dp"
                        android:visibility="invisible"
                        app:layout_constraintTop_toBottomOf="@id/tvRT">

                        <include layout="@layout/layout_stamp" />

                    </RelativeLayout>

                    <ImageView
                        android:id="@+id/imageSignature"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:scaleType="fitCenter"
                        android:src="@mipmap/ic_signature"
                        android:visibility="invisible"
                        app:layout_constraintBottom_toTopOf="@id/tvRTName"
                        app:layout_constraintTop_toTopOf="@id/tvRT" />

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/lottieStampLoading"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:scaleType="fitCenter"
                        android:visibility="invisible"
                        app:layout_constraintBottom_toBottomOf="@id/relativeStamp"
                        app:layout_constraintLeft_toLeftOf="@id/relativeStamp"
                        app:layout_constraintRight_toRightOf="@id/relativeStamp"
                        app:layout_constraintTop_toTopOf="@id/relativeStamp"
                        app:lottie_autoPlay="true"
                        app:lottie_fileName="lottie/wave_loading.json" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvRTName"
                        style="@style/NotoSansBlackRegularStyle1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Cristiano Ronaldo"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/relativeStamp" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.example.villageservice.library.ZoomableRelativeLayout>