<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_pdf">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/paperContainer">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/letterHead"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingTop="9dp"
            android:paddingBottom="9dp"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imageLogo"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/jakarta"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintLeft_toRightOf="@id/imageLogo"
                app:layout_constraintRight_toLeftOf="@id/imageEmpty">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/titleHead"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:textSize="14dp"
                    android:text="pemerintah kota jakarta"
                    android:gravity="center"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/titleSubhead"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:textSize="14dp"
                    android:text="kecamatan duren sawit\nkelurahan malaka sari"
                    android:gravity="center"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAllCaps="false"
                    android:textSize="12dp"
                    android:text="Jl. Wijaya Kusuma 3 Kav. 33, Malaka Sari Jakarta Timur 13460"
                    android:gravity="center"/>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <ImageView
                android:id="@+id/imageEmpty"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:padding="9dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"
            app:layout_constraintTop_toBottomOf="@id/letterHead" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintContent"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="9dp"
            app:layout_constraintTop_toBottomOf="@id/line"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/tvYth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:text="Yth: \n\t\t\tPemohon Pendaftaran Merek dari Usaha Mikro dan Usaha Kecil"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/tvNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:textSize="12dp"
                android:text="SURAT EDARAN\nNOMOR: HKI.4-TI.04.01-01"
                app:layout_constraintTop_toBottomOf="@id/tvYth"/>

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:textSize="12dp"
                android:text="PERMOHONAN PENDAFTARAN MEREK DENGAN FASILITAS USAHA MIKRO DAN USAHA KECIL"
                app:layout_constraintTop_toBottomOf="@id/tvNumber"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>