<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/notificationItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:padding="5dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="4dp"
        app:cardMaxElevation="1dp"
        app:cardUseCompatPadding="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutItems"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/grey_light"
            android:padding="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imageIcon"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:paddingLeft="5dp"
                android:src="@drawable/garuda_logo"
                app:layout_constraintHeight_percent="1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent=".24" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvRepulik"
                style="@style/MulishBlueBoldStyleTyke"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:maxLines="2"
                android:paddingStart="10dp"
                android:paddingLeft="10dp"
                android:text="REPUBLIK INDONESIA"
                app:layout_constraintLeft_toLeftOf="@id/imageIcon"
                app:layout_constraintRight_toRightOf="@id/imageIcon"
                app:layout_constraintTop_toBottomOf="@id/imageIcon"
                tools:ignore="RtlSymmetry" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvKKTitle"
                style="@style/MulishBlackBoldExtraStyle1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="No. Kartu Keluarga"
                app:layout_constraintLeft_toRightOf="@id/imageIcon"
                app:layout_constraintRight_toLeftOf="@id/imageEmpty"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent=".52" />

            <TextView
                android:id="@+id/tvNomorKK"
                style="@style/MulishBlueBoldStyle1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="3178022556xxxxxx"
                app:layout_constraintLeft_toRightOf="@id/imageIcon"
                app:layout_constraintTop_toBottomOf="@id/tvKKTitle"
                app:layout_constraintWidth_percent=".52"
                tools:ignore="RtlSymmetry" />

            <ImageView
                android:id="@+id/imageEmpty"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:src="@drawable/garuda_logo"
                android:visibility="invisible"
                app:layout_constraintHeight_percent="1"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent=".24" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvKepKKTitle"
                style="@style/MulishRegularBlackStyleTiny"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Nama Kepala Keluarga:"
                app:layout_constraintLeft_toRightOf="@id/imageIcon"
                app:layout_constraintRight_toLeftOf="@id/imageEmpty"
                app:layout_constraintTop_toBottomOf="@id/tvNomorKK"
                app:layout_constraintWidth_percent=".52" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvKepKKName"
                style="@style/MulishBoldGreenStyle1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:maxLines="1"
                android:text="Fakhri Pratama"
                app:layout_constraintLeft_toRightOf="@id/imageIcon"
                app:layout_constraintRight_toLeftOf="@id/imageEmpty"
                app:layout_constraintTop_toBottomOf="@id/tvKepKKTitle"
                app:layout_constraintWidth_percent=".52" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvDataKeluarga"
                style="@style/MulishBlueBoldStyle3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Data Keluarga"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvRepulik" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerDataKeluarga"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tvDataKeluarga" />

            <LinearLayout
                android:id="@+id/linearButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/recyclerDataKeluarga">

                <Button
                    android:id="@+id/negButton"
                    style="@style/MulishWhiteBoldStyle1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@color/soft_red"
                    android:text="Hapus"
                    android:textAllCaps="false"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/posButton"
                    style="@style/MulishWhiteBoldStyle1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@color/green"
                    android:text="Ubah"
                    android:textAllCaps="false"
                    android:textColor="@color/white" />


            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>