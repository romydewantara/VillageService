<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/userRequest"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="1dp"
        app:cardMaxElevation="1dp"
        app:cardUseCompatPadding="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutItems"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/light_blue_50"
            android:padding="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imageIcon"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:paddingLeft="5dp"
                android:src="@mipmap/ic_profile_photo"
                app:layout_constraintHeight_percent="1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent=".2" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvName"
                style="@style/MulishBoldBlackStyle1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingStart="10dp"
                android:paddingLeft="10dp"
                android:text="Muhammad Fakhri Pratama"
                app:layout_constraintLeft_toRightOf="@id/imageIcon"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent=".6"
                tools:ignore="RtlSymmetry" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvKTP"
                style="@style/MulishBlueMediumStyle1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:paddingLeft="10dp"
                android:text="3173055020xxxxx"
                app:layout_constraintLeft_toRightOf="@id/imageIcon"
                app:layout_constraintTop_toBottomOf="@id/tvName"
                app:layout_constraintWidth_percent=".6"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:id="@+id/tvDateTitle"
                style="@style/MulishBlueMediumStyleTiny"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:paddingLeft="10dp"
                android:layout_marginTop="15dp"
                android:text="Diajukan pada:"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/tvButtonOpen"
                app:layout_constraintTop_toBottomOf="@id/imageIcon"
                app:layout_constraintBottom_toTopOf="@id/tvDate"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:id="@+id/tvDate"
                style="@style/MulishRegularRedStyleTiny"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:paddingLeft="10dp"
                android:text="dd:MM:yy"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/tvButtonOpen"
                app:layout_constraintTop_toBottomOf="@id/tvDateTitle"
                app:layout_constraintBottom_toBottomOf="@id/tvButtonOpen"
                tools:ignore="RtlSymmetry" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintStatus"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="@id/imageIcon"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent=".2">

                <ImageView
                    android:id="@+id/imageStatus"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:src="@mipmap/ic_pending"
                    app:layout_constraintHeight_percent=".6"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvStatus"
                    style="@style/MulishRegularItalicBlueStyleTiny"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:gravity="center|top"
                    android:maxLines="1"
                    android:text="Pending"
                    app:layout_constraintHeight_percent=".4"
                    app:layout_constraintTop_toBottomOf="@id/imageStatus" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/tvButtonOpen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                app:cardBackgroundColor="@color/green"
                app:cardCornerRadius="8dp"
                app:cardUseCompatPadding="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="@id/constraintStatus"
                app:layout_constraintRight_toRightOf="@id/constraintStatus"
                app:layout_constraintTop_toBottomOf="@id/constraintStatus">

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/MulishWhiteBoldStyle2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingTop="4dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="4dp"
                    android:text="Buka" />

            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>