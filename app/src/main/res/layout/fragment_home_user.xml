<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.HomeUserFragment">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieBackground"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/ic_bg_home_by_stwn"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:id="@+id/relativeSignOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvSignOut"
            style="@style/MulishBlueBoldStyleTyke"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Keluar" />

        <ImageView
            android:id="@+id/signOutButton"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_toEndOf="@id/tvSignOut"
            android:layout_toRightOf="@id/tvSignOut"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:src="@mipmap/ic_sign_out" />

    </RelativeLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutSpace"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:visibility="invisible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/profile"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="50dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:layout_gravity="center"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="47.5dp">

                <ImageView
                    android:id="@+id/imageProfile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_man_profile" />

            </androidx.cardview.widget.CardView>

        </androidx.cardview.widget.CardView>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvNumberTitle"
            style="@style/MulishWhiteMediumStyle1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="No. Kartu Keluarga:"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profile"
            app:layout_constraintWidth_percent=".5" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvKKNumber"
            style="@style/MulishWhiteMediumStyle1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:maxLines="2"
            android:text="012345678910"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvNumberTitle"
            app:layout_constraintWidth_percent=".5" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvKKKep1"
            style="@style/MulishWhiteMediumStyle1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="Kepala Keluarga:"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profile"
            app:layout_constraintWidth_percent=".5" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvKKKep"
            style="@style/MulishWhiteMediumStyle1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:maxLines="1"
            android:text="Cristiano Ronaldo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvKKKep1"
            app:layout_constraintWidth_percent=".5" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingLeft="15dp"
        android:paddingTop="25dp"
        android:paddingRight="15dp"
        android:visibility="visible"
        app:layout_constraintHeight_percent=".6"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutSpace">

        <androidx.cardview.widget.CardView
            android:id="@+id/cvInfo1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:clickable="false"
            app:cardCornerRadius="10dp"
            app:cardMaxElevation="10dp"
            app:cardPreventCornerOverlap="false"
            app:layout_constraintDimensionRatio="1:.8"
            app:layout_constraintHeight_percent=".28"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/cvInfo2"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintInfo1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/light_blue_50"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageInfo1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:src="@mipmap/ic_menu_wedding"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHeight_percent=".35"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias=".15" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvInfoTitle1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:gravity="center_horizontal"
                    android:text="@string/menu_one"
                    android:textColor="@color/dark_blue"
                    app:layout_constraintBottom_toBottomOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvInfo2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:clickable="false"
            app:cardCornerRadius="10dp"
            app:cardMaxElevation="10dp"
            app:cardPreventCornerOverlap="false"
            app:layout_constraintDimensionRatio="1:.8"
            app:layout_constraintHeight_percent=".28"
            app:layout_constraintLeft_toRightOf="@id/cvInfo1"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintInfo2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/grey_medium"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageInfo2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:src="@mipmap/ic_menu_umkm"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHeight_percent=".35"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias=".15" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvInfoTitle2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:gravity="center_horizontal"
                    android:text="@string/menu_two"
                    android:textColor="@color/dark_blue"
                    app:layout_constraintBottom_toBottomOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvInfo3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="15dp"
            android:clickable="false"
            app:cardCornerRadius="10dp"
            app:cardMaxElevation="10dp"
            app:cardPreventCornerOverlap="false"
            app:layout_constraintDimensionRatio="1:.8"
            app:layout_constraintHeight_percent=".28"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/cvInfo4"
            app:layout_constraintTop_toBottomOf="@id/cvInfo1">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintInfo3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/grey_medium"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageInfo3"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:src="@mipmap/ic_menu_move"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHeight_percent=".35"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias=".15" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvInfoTitle3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:gravity="center_horizontal"
                    android:text="@string/menu_three"
                    android:textColor="@color/dark_blue"
                    app:layout_constraintBottom_toBottomOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvInfo4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="15dp"
            android:clickable="false"
            app:cardCornerRadius="10dp"
            app:cardMaxElevation="10dp"
            app:cardPreventCornerOverlap="false"
            app:layout_constraintDimensionRatio="1:.8"
            app:layout_constraintHeight_percent=".28"
            app:layout_constraintLeft_toRightOf="@id/cvInfo3"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cvInfo2">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintInfo4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/light_blue_50"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageInfo4"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:src="@mipmap/ic_menu_kk"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHeight_percent=".35"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias=".15" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvInfoTitle4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:gravity="center_horizontal"
                    android:text="@string/menu_four"
                    android:textColor="@color/dark_blue"
                    app:layout_constraintBottom_toBottomOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvInfo5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="15dp"
            android:clickable="false"
            app:cardCornerRadius="10dp"
            app:cardMaxElevation="10dp"
            app:cardPreventCornerOverlap="false"
            app:layout_constraintDimensionRatio="1:.8"
            app:layout_constraintHeight_percent=".28"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/cvInfo6"
            app:layout_constraintTop_toBottomOf="@id/cvInfo3">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintInfo5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/light_blue_50"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageInfo5"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:src="@mipmap/ic_menu_akta"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHeight_percent=".35"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias=".15" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvInfoTitle5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:gravity="center_horizontal"
                    android:text="@string/menu_five"
                    android:textColor="@color/dark_blue"
                    app:layout_constraintBottom_toBottomOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvInfo6"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="15dp"
            android:clickable="false"
            app:cardCornerRadius="10dp"
            app:cardMaxElevation="10dp"
            app:cardPreventCornerOverlap="false"
            app:layout_constraintDimensionRatio="1:.8"
            app:layout_constraintHeight_percent=".28"
            app:layout_constraintLeft_toRightOf="@id/cvInfo5"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cvInfo4">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintInfo6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/grey_medium"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageInfo6"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:src="@mipmap/ic_menu_cemetery"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHeight_percent=".35"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias=".15" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvInfoTitle6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:gravity="center_horizontal"
                    android:text="@string/menu_six"
                    android:textColor="@color/dark_blue"
                    app:layout_constraintBottom_toBottomOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/lilac_light"
        app:layout_constraintTop_toBottomOf="@id/constraintContainer" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintContact"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="5dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintContainer">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/grey_medium"
            app:cardCornerRadius="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/imageWhatsapp"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:paddingStart="10dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/ic_whatsapp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="RtlSymmetry" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvWhatsapp"
                    style="@style/MulishBlueBoldStyleTyke"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="WhatsApp\n(+6281291370000)"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/imageWhatsapp"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="0dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="@color/blue"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/tvWhatsapp"
                    app:layout_constraintRight_toLeftOf="@id/imageCall"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/imageCall"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:paddingStart="10dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/ic_telephone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/tvWhatsapp"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="RtlSymmetry" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvCall"
                    style="@style/MulishBlueBoldStyleTyke"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:paddingEnd="5dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="5dp"
                    android:text="Panggil\n(+6281291370000)"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/imageCall"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="RtlSymmetry" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <RelativeLayout
        android:id="@+id/overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_50"
        android:visibility="invisible" />

</androidx.constraintlayout.widget.ConstraintLayout>