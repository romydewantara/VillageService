<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.CitizenFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/userBackground"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/ic_bg_home_by_stwn"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.15"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cvInfoLeader"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:clickable="false"
            android:visibility="invisible"
            app:cardCornerRadius="10dp"
            app:cardMaxElevation="10dp"
            app:cardPreventCornerOverlap="false"
            app:layout_constraintHeight_percent=".20"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/dark_blue"
                android:padding="10dp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvName"
                    style="@style/MulishWhiteBoldStyle2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bpk. Sukina (Ketua RT. 007)"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvPhoneNum"
                    style="@style/MulisGreyBoldStyle1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+6281932634438"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvName" />

                <RelativeLayout
                    android:id="@+id/profile"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cvProfile"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_centerInParent="true"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="50dp">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardView"
                            android:layout_width="95dp"
                            android:layout_height="95dp"
                            android:layout_gravity="center"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="47.5dp">

                            <ImageView
                                android:id="@+id/imageProfile"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:scaleType="centerCrop"
                                android:src="@mipmap/ic_profile_photo" />

                        </androidx.cardview.widget.CardView>

                    </androidx.cardview.widget.CardView>

                </RelativeLayout>

                <Button
                    android:id="@+id/editProfileButton"
                    style="@style/MulishBlueBoldStyle1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_button_edit"
                    android:text="Edit"
                    android:textAllCaps="false"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvInfoWargaBaru"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:clickable="false"
            android:visibility="invisible"
            app:cardCornerRadius="10dp"
            app:cardMaxElevation="10dp"
            app:cardPreventCornerOverlap="false"
            app:layout_constraintHeight_percent=".10"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cvInfoLeader">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="#6D8299">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvWT1"
                        style="@style/MulishWhiteMediumStyleTiny"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Daftar Warga\nTetap"
                        app:layout_constraintBottom_toTopOf="@id/viewWT1"
                        app:layout_constraintTop_toTopOf="parent" />

                    <View
                        android:id="@+id/viewWT1"
                        android:layout_width="match_parent"
                        android:layout_height="0.6dp"
                        android:background="@color/white_50"
                        app:layout_constraintBottom_toTopOf="@id/tvJWT1"
                        app:layout_constraintTop_toBottomOf="@id/tvWT1" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvJWT1"
                        style="@style/MulishWhiteBoldStyle1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="149 jiwa"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/viewWT1" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="@color/white_50" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvWT2"
                        style="@style/MulishWhiteMediumStyleTiny"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Daftar Warga\nTidak Tetap"
                        app:layout_constraintBottom_toTopOf="@id/viewWT2"
                        app:layout_constraintTop_toTopOf="parent" />

                    <View
                        android:id="@+id/viewWT2"
                        android:layout_width="match_parent"
                        android:layout_height="0.6dp"
                        android:background="@color/white_50"
                        app:layout_constraintBottom_toTopOf="@id/tvJWT2"
                        app:layout_constraintTop_toBottomOf="@id/tvWT2" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvJWT2"
                        style="@style/MulishWhiteBoldStyle1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="56 jiwa"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/viewWT2" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/linearMiddle"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            android:background="@color/dark_blue"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:visibility="invisible"
            app:layout_constraintTop_toBottomOf="@id/cvInfoWargaBaru">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvLayoutSyarat"
                style="@style/MulishWhiteBoldStyle3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Syarat Pengajuan Surat Pengantar"
                app:layout_constraintTop_toBottomOf="@id/cvInfoWargaBaru" />

            <include
                layout="@layout/layout_citizen_info"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearMainMenu"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:visibility="invisible"
            app:layout_constraintTop_toBottomOf="@id/linearMiddle"
            app:layout_constraintBottom_toTopOf="@id/addUserButton">

            <include layout="@layout/layout_citizen" />
        </LinearLayout>

        <Button
            android:id="@+id/addUserButton"
            style="@style/MulishWhiteBoldStyle2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/bg_button_enabled"
            android:maxLines="1"
            android:text="Registrasi Kartu Keluarga"
            android:textAllCaps="false"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <RelativeLayout
        android:id="@+id/overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_50"
        android:visibility="invisible" />

</androidx.constraintlayout.widget.ConstraintLayout>